<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WTF.MAUI.ViewModels"
             x:Class="WTF.MAUI.Views.LoginPage"
             x:DataType="vm:LoginViewModel"
             Title="Login"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#FCF8F1">

    <ScrollView>
        <VerticalStackLayout Padding="32">

            <!-- Logo/Brand Section -->
            <VerticalStackLayout Spacing="8" 
                                Margin="0,0,0,32">
                <Image Source="logo_new.png" 
                       HeightRequest="150"
                       WidthRequest="150"
                       HorizontalOptions="Center" />

                <Border Padding="16,8"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="#1F1F1F"
                        Stroke="Transparent"
                        HorizontalOptions="Center"
                        Margin="0,8,0,0">
                    <Label Text="ADMIN PORTAL"
                           FontSize="12"
                           FontAttributes="Bold"
                           TextColor="#FCF8F1" />
                </Border>
            </VerticalStackLayout>

            <!-- Login Card -->
            <Border Padding="24"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="#F9F8F4"
                    Stroke="Transparent"
                    Shadow="{Shadow Brush=Black, Offset='0,4', Radius=8, Opacity=0.3}">

                <VerticalStackLayout Spacing="20">

                    <!-- Error Message -->
                    <Border IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullConverter}}"
                            BackgroundColor="#FFEBEE"
                            Stroke="#C62828"
                            StrokeThickness="2"
                            StrokeShape="RoundRectangle 8"
                            Padding="12"
                            Margin="0,0,0,8">
                        <Label Text="{Binding ErrorMessage}" 
                               TextColor="#C62828"
                               FontSize="14" />
                    </Border>

                    <!-- Username -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Username"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#1F1F1F" />
                        <Border Padding="10,0,0,0"
                                StrokeShape="RoundRectangle 8"
                                Stroke="#1F1F1F"
                                StrokeThickness="1"
                                BackgroundColor="#FCF8F1">
                            <Entry Text="{Binding Username}"
                                   Placeholder="Enter your username"
                                   IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                   BackgroundColor="Transparent"
                                   TextColor="#1F1F1F"
                                   PlaceholderColor="#999"
                                   FontSize="16"
                                   ReturnType="Next" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Password -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Password"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#1F1F1F" />
                        <Border Padding="10,0,0,0"
                                StrokeShape="RoundRectangle 8"
                                Stroke="#1F1F1F"
                                StrokeThickness="1"
                                BackgroundColor="#FCF8F1">
                            <Entry Text="{Binding Password}"
                                   Placeholder="Enter your password"
                                   IsPassword="True"
                                   IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                   BackgroundColor="Transparent"
                                   TextColor="#1F1F1F"
                                   PlaceholderColor="#999"
                                   FontSize="16"
                                   ReturnType="Done"
                                   ReturnCommand="{Binding LoginCommand}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Remember Me -->
                    <HorizontalStackLayout>
                        <CheckBox IsChecked="{Binding RememberMe}"
                                 Color="#1F1F1F" />
                        <Label Text="Remember me"
                               FontSize="14"
                               TextColor="#1F1F1F"
                               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ToggleRememberMeCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>

                    <!-- Login Button with Integrated Loading -->
                    <Grid HeightRequest="50" Margin="0,8,0,0">
                        <Button Command="{Binding LoginCommand}"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                BackgroundColor="#1F1F1F"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                CornerRadius="8">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button"
                                            Binding="{Binding IsLoading}"
                                            Value="True">
                                    <Setter Property="Opacity" Value="0.7" />
                                    <Setter Property="Text" Value="" />
                                </DataTrigger>
                                <DataTrigger TargetType="Button"
                                            Binding="{Binding IsLoading}"
                                            Value="False">
                                    <Setter Property="Opacity" Value="1.0" />
                                    <Setter Property="Text" Value="Login" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>

                        <!-- Loading Indicator Overlay -->
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                          IsVisible="{Binding IsLoading}"
                                          Color="White"
                                          WidthRequest="24"
                                          HeightRequest="24"
                                          HorizontalOptions="Center"
                                          VerticalOptions="Center"
                                          InputTransparent="True" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Footer -->
            <HorizontalStackLayout HorizontalOptions="Center" Margin="0,32,0,0" Spacing="6">
                <!-- Material Icon -->
                <Label Text="&#xE90C;"
                   FontSize="12"
                   FontFamily="MaterialIconsOutlined"
                   TextColor="#999" />

                <!-- Text -->
                <Label Text="2025 Wake.Taste.Focus by Faith All rights reserved."
                   FontSize="12"
                   TextColor="#999" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
