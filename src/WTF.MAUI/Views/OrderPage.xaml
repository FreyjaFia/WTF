<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WTF.MAUI.Views.OrderPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:enums="clr-namespace:WTF.Contracts.Orders.Enums;assembly=WTF.Contracts"
    xmlns:vm="clr-namespace:WTF.MAUI.ViewModels"
    x:DataType="vm:OrderViewModel"
    BackgroundColor="#FCF8F1">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*" HeightRequest="44">
            <Label
                Grid.Column="1"
                Margin="0"
                FontAttributes="Bold"
                FontSize="22"
                Text="Orders"
                TextColor="#1F1F1F"
                VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <Grid
        Padding="16,0"
        BackgroundColor="#FCF8F1"
        RowDefinitions="Auto,*">

        <!--  Header with Status Filters  -->
        <VerticalStackLayout
            Grid.Row="0"
            Margin="0,0,0,16"
            Spacing="12">

            <!--  Search Box with Add Button  -->
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!--  Search Icon  -->
                <Label
                    Grid.Column="0"
                    Margin="8,0"
                    FontFamily="MaterialIconsOutlined"
                    FontSize="20"
                    Text="&#xe8b6;"
                    VerticalOptions="Center" />

                <!--  Search Entry  -->
                <Entry
                    Grid.Column="1"
                    BackgroundColor="Transparent"
                    Placeholder="Search by order number..."
                    PlaceholderColor="#999"
                    Text="{Binding SearchText}"
                    TextColor="#1F1F1F"
                    VerticalOptions="Center" />

                <!--  Clear Button (when text exists)  -->
                <Button
                    Grid.Column="2"
                    Padding="8"
                    BackgroundColor="Transparent"
                    Command="{Binding ClearSearchCommand}"
                    FontFamily="MaterialIconsOutlined"
                    FontSize="16"
                    IsVisible="{Binding SearchText, Converter={StaticResource IsNotNullConverter}}"
                    Text="&#xe5cd;"
                    TextColor="#666" />
            </Grid>

            <!--  Status Filter Buttons  -->
            <ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
                <HorizontalStackLayout Spacing="8">
                    <Button
                        Padding="16,8"
                        BackgroundColor="#607D8B"
                        Command="{Binding FilterByStatusCommand}"
                        CommandParameter="{x:Static enums:OrderStatusEnum.All}"
                        CornerRadius="20"
                        Opacity="{Binding SelectedStatus, Converter={StaticResource StatusButtonOpacityConverter}, ConverterParameter='All'}"
                        Text="All"
                        TextColor="White" />

                    <Button
                        Padding="16,8"
                        BackgroundColor="#FFA726"
                        Command="{Binding FilterByStatusCommand}"
                        CommandParameter="{x:Static enums:OrderStatusEnum.Pending}"
                        CornerRadius="20"
                        Opacity="{Binding SelectedStatus, Converter={StaticResource StatusButtonOpacityConverter}, ConverterParameter={x:Static enums:OrderStatusEnum.Pending}}"
                        Text="Pending"
                        TextColor="White" />

                    <Button
                        Padding="16,8"
                        BackgroundColor="#26A69A"
                        Command="{Binding FilterByStatusCommand}"
                        CommandParameter="{x:Static enums:OrderStatusEnum.ForDelivery}"
                        CornerRadius="20"
                        Opacity="{Binding SelectedStatus, Converter={StaticResource StatusButtonOpacityConverter}, ConverterParameter={x:Static enums:OrderStatusEnum.ForDelivery}}"
                        Text="For Delivery"
                        TextColor="White" />

                    <Button
                        Padding="16,8"
                        BackgroundColor="#66BB6A"
                        Command="{Binding FilterByStatusCommand}"
                        CommandParameter="{x:Static enums:OrderStatusEnum.Done}"
                        CornerRadius="20"
                        Opacity="{Binding SelectedStatus, Converter={StaticResource StatusButtonOpacityConverter}, ConverterParameter={x:Static enums:OrderStatusEnum.Done}}"
                        Text="Done"
                        TextColor="White" />

                    <Button
                        Padding="16,8"
                        BackgroundColor="#EF5350"
                        Command="{Binding FilterByStatusCommand}"
                        CommandParameter="{x:Static enums:OrderStatusEnum.Cancelled}"
                        CornerRadius="20"
                        Opacity="{Binding SelectedStatus, Converter={StaticResource StatusButtonOpacityConverter}, ConverterParameter={x:Static enums:OrderStatusEnum.Cancelled}}"
                        Text="Cancelled"
                        TextColor="White" />
                </HorizontalStackLayout>
            </ScrollView>

            <!--  Error/Success Messages  -->
            <Border
                Padding="12"
                BackgroundColor="#FFEBEE"
                IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullConverter}}"
                Stroke="#C62828"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="2">
                <Label
                    FontSize="14"
                    Text="{Binding ErrorMessage}"
                    TextColor="#C62828" />
            </Border>

            <Border
                Padding="12"
                BackgroundColor="#C8E6C9"
                IsVisible="{Binding SuccessMessage, Converter={StaticResource IsNotNullConverter}}"
                Stroke="#2E7D32"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="2">
                <Label
                    FontSize="14"
                    Text="{Binding SuccessMessage}"
                    TextColor="#2E7D32" />
            </Border>
        </VerticalStackLayout>

        <!--  Orders List  -->
        <RefreshView
            Grid.Row="1"
            Command="{Binding RefreshOrdersCommand}"
            IsRefreshing="{Binding IsRefreshing, Mode=TwoWay}"
            IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
            RefreshColor="#1F1F1F">
            <Grid>
                <!--  Collection View  -->
                <CollectionView ItemsSource="{Binding Orders}">
                    <CollectionView.EmptyView>
                        <ContentView>
                            <VerticalStackLayout
                                Padding="32"
                                HorizontalOptions="Center"
                                Spacing="16"
                                VerticalOptions="Center">
                                <Label
                                    FontSize="48"
                                    HorizontalOptions="Center"
                                    Text="ðŸ“‹" />
                                <Label
                                    FontSize="18"
                                    HorizontalOptions="Center"
                                    Text="No orders found"
                                    TextColor="#666" />
                                <Label
                                    FontSize="14"
                                    HorizontalOptions="Center"
                                    Text="Try selecting a different status filter"
                                    TextColor="#999" />
                            </VerticalStackLayout>
                        </ContentView>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="{x:Null}">
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem
                                            BackgroundColor="#EF5350"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}}, Path=DeleteOrderCommand}"
                                            CommandParameter="{Binding Id}"
                                            Text="Delete" />
                                    </SwipeItems>
                                </SwipeView.RightItems>

                                <Border
                                    Margin="0,0,0,12"
                                    Padding="16"
                                    BackgroundColor="#F9F8F4"
                                    Shadow="{Shadow Brush=Black,
                                                    Offset='0,4',
                                                    Radius=8,
                                                    Opacity=0.3}"
                                    StrokeShape="RoundRectangle 12">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}}, Path=ViewOrderDetailsCommand}" CommandParameter="{Binding .}" />
                                    </Border.GestureRecognizers>

                                    <Grid
                                        ColumnDefinitions="*,Auto"
                                        RowDefinitions="Auto,Auto,Auto"
                                        RowSpacing="8">

                                        <!--  Order Number  -->
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            FontAttributes="Bold"
                                            FontSize="18"
                                            Text="{Binding OrderNumber, StringFormat='#{0}'}"
                                            TextColor="#1F1F1F" />

                                        <!--  Status Badge  -->
                                        <Border
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Padding="12,4"
                                            BackgroundColor="{Binding Status, Converter={StaticResource OrderStatusColorConverter}}"
                                            Stroke="Transparent"
                                            StrokeShape="RoundRectangle 16">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="12"
                                                Text="{Binding Status, Converter={StaticResource OrderStatusTextConverter}}"
                                                TextColor="White" />
                                        </Border>

                                        <!--  Created Date  -->
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            FontSize="12"
                                            Text="{Binding CreatedAt, StringFormat='{0:MMM dd, yyyy hh:mm tt}'}"
                                            TextColor="#666" />

                                        <!--  Items Count  -->
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            FontSize="14"
                                            TextColor="#1F1F1F">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Items: " />
                                                    <Span FontAttributes="Bold" Text="{Binding Items.Count}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>

                                        <!--  Arrow Icon  -->
                                        <Grid Grid.Row="2" Grid.Column="1">
                                            <Label
                                                FontSize="24"
                                                HorizontalOptions="End"
                                                Text="â€º"
                                                TextColor="#666"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!--  Refreshing Overlay  -->
                <Border
                    BackgroundColor="#80FFFFFF"
                    HorizontalOptions="Fill"
                    InputTransparent="True"
                    IsVisible="{Binding IsRefreshing}"
                    VerticalOptions="Fill">
                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        Spacing="12"
                        VerticalOptions="Center">
                        <ActivityIndicator
                            HeightRequest="32"
                            IsRunning="{Binding IsRefreshing}"
                            WidthRequest="32"
                            Color="#1F1F1F" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="14"
                            HorizontalOptions="Center"
                            Text="Refreshing..."
                            TextColor="#1F1F1F" />
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </RefreshView>

        <!--  Loading Indicator  -->
        <VerticalStackLayout
            Grid.Row="1"
            HorizontalOptions="Center"
            IsVisible="{Binding IsLoading}"
            Spacing="16"
            VerticalOptions="Center">
            <ActivityIndicator
                HeightRequest="40"
                IsRunning="{Binding IsLoading}"
                WidthRequest="40"
                Color="#1F1F1F" />
            <Label
                FontSize="16"
                HorizontalOptions="Center"
                Text="Loading orders..."
                TextColor="#666" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
