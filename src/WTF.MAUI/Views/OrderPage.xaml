<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WTF.MAUI.ViewModels"
             xmlns:enums="clr-namespace:WTF.Contracts.Orders.Enums;assembly=WTF.Contracts"
             x:Class="WTF.MAUI.Views.OrderPage"
             x:DataType="vm:OrderViewModel"
             Title="Orders">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Refresh" 
                     Command="{Binding RefreshOrdersCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" 
          Padding="16">
        
        <!-- Header with Status Filters -->
        <VerticalStackLayout Grid.Row="0" Spacing="12" Margin="0,0,0,16">
            <Label Text="Order Management" 
                   FontSize="24" 
                   FontAttributes="Bold" />
            
            <!-- Status Filter Buttons -->
            <ScrollView Orientation="Horizontal" 
                        HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout Spacing="8">
                    <Button Text="Pending" 
                            BackgroundColor="#FFA726"
                            TextColor="White"
                            CornerRadius="20"
                            Padding="16,8"
                            Command="{Binding FilterByStatusCommand}"
                            CommandParameter="{x:Static enums:OrderStatusEnum.Pending}" />
                    
                    <Button Text="Preparing" 
                            BackgroundColor="#42A5F5"
                            TextColor="White"
                            CornerRadius="20"
                            Padding="16,8"
                            Command="{Binding FilterByStatusCommand}"
                            CommandParameter="{x:Static enums:OrderStatusEnum.Preparing}" />
                    
                    <Button Text="Ready" 
                            BackgroundColor="#66BB6A"
                            TextColor="White"
                            CornerRadius="20"
                            Padding="16,8"
                            Command="{Binding FilterByStatusCommand}"
                            CommandParameter="{x:Static enums:OrderStatusEnum.Ready}" />
                    
                    <Button Text="Completed" 
                            BackgroundColor="#26A69A"
                            TextColor="White"
                            CornerRadius="20"
                            Padding="16,8"
                            Command="{Binding FilterByStatusCommand}"
                            CommandParameter="{x:Static enums:OrderStatusEnum.Completed}" />
                    
                    <Button Text="Cancelled" 
                            BackgroundColor="#EF5350"
                            TextColor="White"
                            CornerRadius="20"
                            Padding="16,8"
                            Command="{Binding FilterByStatusCommand}"
                            CommandParameter="{x:Static enums:OrderStatusEnum.Cancelled}" />
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Error/Success Messages -->
            <Border IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullConverter}}"
                    BackgroundColor="#FFEBEE"
                    Stroke="#C62828"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 8"
                    Padding="12">
                <Label Text="{Binding ErrorMessage}" 
                       TextColor="#C62828"
                       FontSize="14" />
            </Border>

            <Border IsVisible="{Binding SuccessMessage, Converter={StaticResource IsNotNullConverter}}"
                    BackgroundColor="#C8E6C9"
                    Stroke="#2E7D32"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 8"
                    Padding="12">
                <Label Text="{Binding SuccessMessage}" 
                       TextColor="#2E7D32"
                       FontSize="14" />
            </Border>
        </VerticalStackLayout>

        <!-- Orders List -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshOrdersCommand}">
            <CollectionView ItemsSource="{Binding Orders}"
                            EmptyView="No orders found">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="#EF5350"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}}, Path=DeleteOrderCommand}"
                                               CommandParameter="{Binding Id}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Border Margin="0,0,0,12"
                                    Padding="16"
                                    StrokeShape="RoundRectangle 12"
                                    BackgroundColor="#F9F8F4"
                                    Stroke="#1F1F1F"
                                    StrokeThickness="2"
                                    Shadow="{Shadow Brush=Black, Offset='0,4', Radius=8, Opacity=0.3}">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}}, Path=ViewOrderDetailsCommand}"
                                        CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>

                                <Grid RowDefinitions="Auto,Auto,Auto" 
                                      ColumnDefinitions="*,Auto"
                                      RowSpacing="8">
                                    
                                    <!-- Order Number -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding OrderNumber}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#1F1F1F" />

                                    <!-- Status Badge -->
                                    <Border Grid.Row="0" Grid.Column="1"
                                            Padding="12,4"
                                            StrokeShape="RoundRectangle 16"
                                            Stroke="Transparent"
                                            BackgroundColor="{Binding Status, Converter={StaticResource OrderStatusColorConverter}}">
                                        <Label Text="{Binding Status, Converter={StaticResource OrderStatusTextConverter}}"
                                               TextColor="White"
                                               FontSize="12"
                                               FontAttributes="Bold" />
                                    </Border>

                                    <!-- Created Date -->
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding CreatedAt, StringFormat='Created: {0:MMM dd, yyyy hh:mm tt}'}"
                                           FontSize="14"
                                           TextColor="#666" />

                                    <!-- Items Count -->
                                    <Label Grid.Row="2" Grid.Column="0"
                                           FontSize="14"
                                           TextColor="#1F1F1F">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Items: " />
                                                <Span Text="{Binding Items.Count}" FontAttributes="Bold" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <!-- Arrow Icon -->
                                    <Label Grid.Row="2" Grid.Column="1"
                                           Text="â€º"
                                           FontSize="24"
                                           TextColor="#666"
                                           VerticalOptions="Center" />
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1"
                           IsRunning="{Binding IsLoading}"
                           IsVisible="{Binding IsLoading}"
                           Color="#1F1F1F"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
    </Grid>
</ContentPage>
