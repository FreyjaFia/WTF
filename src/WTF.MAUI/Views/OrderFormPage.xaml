<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WTF.MAUI.Views.OrderFormPage"
             Title="Order Details"
             Shell.NavBarIsVisible="False">

  <!-- Root Grid -->
  <Grid>
    <!-- Main layout grid (products + footer) -->
    <Grid RowDefinitions="*,Auto">
      <!-- Products Grid -->
      <CollectionView Grid.Row="0">
        <CollectionView.ItemsLayout>
          <GridItemsLayout Orientation="Vertical" Span="2" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
          <DataTemplate>
            <Frame Padding="10" Margin="5" BorderColor="LightGray">
              <StackLayout>
                <Label Text="Product Name" FontAttributes="Bold" />
                <Label Text="₱100.00" TextColor="Green" />
              </StackLayout>
            </Frame>
          </DataTemplate>
        </CollectionView.ItemTemplate>
        <CollectionView.ItemsSource>
          <x:Array Type="{x:Type x:String}">
            <x:String>Product A</x:String>
            <x:String>Product B</x:String>
            <x:String>Product C</x:String>
            <x:String>Product D</x:String>
          </x:Array>
        </CollectionView.ItemsSource>
      </CollectionView>

      <!-- Footer Bar (info only) -->
      <Grid x:Name="FooterBar" Grid.Row="1" BackgroundColor="#1F1F1F" Padding="10">
        <Label Text="Total: ₱250.00"
               TextColor="White"
               FontSize="18"
               HorizontalOptions="Center" />
      </Grid>
    </Grid>

    <!-- Expandable Bottom Sheet (overlay) -->
    <Grid x:Name="BottomSheet"
          BackgroundColor="White"
          VerticalOptions="End"
          HeightRequest="300"
          TranslationY="300">
      <!-- start hidden -->
      <StackLayout Padding="20">
        <Label Text="Order Summary" FontAttributes="Bold" FontSize="20" />
        <Label Text="Product A x2 - ₱200.00" />
        <Label Text="Product B x1 - ₱50.00" />
        <Button Text="Checkout"
                BackgroundColor="Green"
                TextColor="White" />
      </StackLayout>
    </Grid>
  </Grid>
</ContentPage>