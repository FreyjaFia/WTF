<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WTF.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WTF.MAUI"
    xmlns:views="clr-namespace:WTF.MAUI.Views"
    Title="WTF.MAUI"
    Shell.TabBarBackgroundColor="Transparent"
    Shell.TabBarForegroundColor="#1F1F1F"
    Shell.TabBarTitleColor="#1F1F1F"
    Shell.TabBarUnselectedColor="#707070">

    <!-- Loading Page (First page shown) -->
    <ShellContent
        Title="Loading"
        ContentTemplate="{DataTemplate views:LoadingPage}"
        Route="LoadingPage" />

    <!-- Login Page (No Tab Bar) -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <!-- Main App with Tab Bar -->
    <TabBar Route="MainTabs">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage">
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xE88A;" 
                         FontFamily="MaterialIconsOutlined" 
                         Size="24" />
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Orders"
            ContentTemplate="{DataTemplate views:OrderPage}"
            Route="OrderPage">
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xE8CC;" 
                         FontFamily="MaterialIconsOutlined" 
                         Size="24" />
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>
</Shell>
