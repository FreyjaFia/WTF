<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WTF.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WTF.MAUI"
    xmlns:views="clr-namespace:WTF.MAUI.Views"
    Title="WTF.MAUI">

    <!-- Login Page (No Tab Bar) -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <!-- Main App with Tab Bar -->
    <TabBar Route="MainTabs">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="{FontImage Glyph='ðŸ ', Size=20}" />

        <ShellContent
            Title="Orders"
            ContentTemplate="{DataTemplate views:OrderPage}"
            Route="OrderPage"
            Icon="{FontImage Glyph='ðŸ“‹', Size=20}" />
    </TabBar>

</Shell>
