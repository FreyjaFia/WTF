{
  "name": "wtf-pos",
  "version": "1.3.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "build:android": "ng build --configuration=android",
    "build:android-dev": "ng build --configuration=android-dev",
    "cap:sync": "npx cap sync android",
    "cap:open": "npx cap open android",
    "android": "npm run build:android && npm run cap:sync && npm run cap:open",
    "android:dev": "npm run build:android-dev && npm run cap:sync && npm run cap:open",
    "release:major": "node scripts/release-version.mjs major",
    "release:minor": "node scripts/release-version.mjs minor",
    "release:patch": "node scripts/release-version.mjs patch",
    "push:main:tags": "git push origin main --tags"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@capacitor-community/file-opener": "^8.0.0",
    "@capacitor-community/media": "^9.0.1",
    "@capacitor/android": "^8.1.0",
    "@capacitor/app": "^8.0.1",
    "@capacitor/core": "^8.1.0",
    "@capacitor/filesystem": "^8.1.2",
    "@capacitor/share": "^8.0.1",
    "@capacitor/status-bar": "^8.0.1",
    "@microsoft/signalr": "^10.0.0",
    "@types/sortablejs": "^1.15.9",
    "dexie": "^4.3.0",
    "html-to-image": "^1.11.13",
    "jwt-decode": "^4.0.0",
    "rxjs": "~7.8.0",
    "sortablejs": "^1.15.7",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.0",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.12",
    "angular-eslint": "21.2.0",
    "daisyui": "^5.5.17",
    "eslint": "^9.39.2",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.50.1",
    "vitest": "^4.0.8"
  }
}
